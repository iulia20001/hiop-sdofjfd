<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/map" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="409dp"
        android:layout_height="730dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fon" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/top" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='"Игры Манчаары"'
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Правила"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Бег с палкой по пересеченной местности."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Инвентарь:"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- участник должен иметь палку (длина не менее 130 см, диаметр не менее 10 мм, вес - произвольный), палка может быть металлической, дюралевой, деревянной или из другого материала;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- перед стартом судья при участниках проверяет соответствие палки участника требованиям Правил;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- участник должен иметь нагрудный номер."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Место проведения соревнований."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Место проведения соревнований по бегу с палкой по пересеченной местности или улицам населенных пунктов, состоит из дистанции и стартовой - финишной - площадки (городка)."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дистанция может быть проложена как по замкнутому маршруту со стартом и финишем в одном месте, так и по разомкнутому маршруту, но в данном случае старт и финиш располагаются на расстоянии друг от друга. Дистанция бега размечается цветными флажками, гирляндами, стрелками с указанием направления дистанции и метража пройденного пути."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Измерение дистанции производится рулеткой или прибором, оснащенным измерительным устройством."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дистанция измеряется от края линии старта, дальней от финиша, до края линии финиша, ближней к старту. За правильность и точность дистанции ответственность несет начальник дистанции."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Стартовая и финишная площадка оформляется красочно."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оборудование старта:"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- старт должен быть обозначен белой или красной линией шириной 5 см;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- стартовый коридор (вход участника на старт): длина - 3 - 5 м, ширина - 2 м, он огораживается веревкой, шнуром; если старт производится одновременно всеми участниками или по группам, то он должен иметь ширину 20 - 30 м;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='- надпись "старт" устанавливается над стартовой линией или рядом с ней;'
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- от стартовой линии дистанция обозначается флажками."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оборудование финиша:"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- финиш должен быть обозначен белой или красной линией шириной 5 см;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- финишный створ: длина - не менее 20 м, ширина - 6 м;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='- надпись "финиш" устанавливается над финишной линией или рядом с ней.'
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Правила бега с палкой по пересеченной местности:"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- перед началом соревнований участник обязан ознакомиться с дистанцией (он это делает самостоятельно или вместе с другими участниками, когда проводится организованный просмотр дистанции);"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='- участник входит в стартовый коридор по вызову судьи при участниках, а на стартовую линию по команде стартера "на старт!";'
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- судья-стартер начинает соревнования и дает старт первому участнику только с разрешения старшего судьи, перед началом соревнований он проверяет ход часов и производит пуск часов (2 стартовых и 2 финишных);"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- время, оставшееся до старта, объявляет громко (по мегафону);"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- старший судья дает разрешение начать соревнования при условии полной готовности судейской коллегии, начальника дистанции к проведению соревнований;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- старт может быть групповым, парным и одиночным;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- парный и одиночный старт производятся через 30 сек;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- бег начинается с положения высокого старта от стартовой линии;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='- одиночный старт производится следующим образом: судья-стартер объявляет оставшееся время до старта - 10 сек. Судья держит руку перед участником и отсчитывает оставшиеся секунды: 5, 4, 3, 2, 1, "марш" и одновременно убирает руку;'
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='- при групповом старте судья-стартер подает две команды "на старт!", убедившись, что все стоят на одной линии, подает затем команду "марш" или производит выстрел из стартового пистолета; '
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='- по команде "на старт!" участники занимают любое удобное для них положение у линии старта, не касаясь стартовой линии, входящей в длину дистанции;'
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- судья-стартер дает сигнал к началу бега только при полном отсутствии движений участников;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='- если участник (или группа) участников не принимают неподвижное положение, он (или они) считаются нарушившими правила, и ему (или им) делается предупреждение, и при групповом старте, по причине нарушения правил участниками или по какой-либо другой причине, откладывается старт, то судья стартер подает команду "отставить", после чего участники группового забега должны отойти от стартовой линии и занять прежнее место только после повторной команды "на старт";'
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='- если при групповом старте участник или группа участников выполнили старт до выстрела или команды "марш", то им делается предупреждение и при повторном старте их ставят позади других участников;'
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- замечания, предупреждения судьи-стартера заносят в стартовый протокол;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='- результат бега засчитывается, если участник прошел дистанцию без нарушения правил от "старта" до "финиша".'
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Результат бега не засчитывается:"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView58"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- если участник допустил сокращение дистанции;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- если участник не прошел хотя бы один контрольный пункт;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- если двумя судьями зафиксирована помощь участнику при прохождении дистанции, в том числе и в форме лидирования;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- если участник принял старт без команды судьи-стартера (выбежал со стороны);"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- если участник помешал, толкнул, свалил, нанес травму сопернику;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- если участник прекратил бег;"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- если участник финишировал без палки."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView65"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Участник, сошедший с дистанции (прекратил бег), считается выбывшим из соревнований по бегу, и он обязан через представителей или лично сообщить об этом судьям."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Окончание дистанции фиксируется в момент, когда участник пересекает какой-либо частью туловища линию финиша."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView67"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Результаты в беге заносятся в протокол с точностью до сотых долей секунды."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView68"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дистанции бега с палкой по возрастным группам:"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView69"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="женщины/мужчины"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView70"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18 лет и старше"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView71"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2000/3000 м."
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView72"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="юниорки/юниоры"
